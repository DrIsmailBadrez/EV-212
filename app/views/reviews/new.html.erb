<div class="container text-center p-4">
  <h1 class="m-5" >Add a new review for <%= @station.name %></h1>
  <%= simple_form_for [@station, @review] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :content, label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Comment", placeholder:"Comment"} %>
      <%= f.input :rating, label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Rating", placeholder:"Rating"}  %>
      <%= f.input :photo, as: :file,
                    label: false,
                    required: true,
                    autofocus: true,
                    input_html: { placeholder:"Photo"}  %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Submit", class:"btn btn-primary w-50 rounded-pill" %>
    </div>
  <% end %>
  <br>
  <div>
    <%= link_to "Back to map", stations_path %>
  </div>
</div>
