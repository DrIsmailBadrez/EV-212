
<div class="container text-center p-4">
  <div class="offcanvas-header">
    <h5 id="offcanvasRightLabel">Add a new review</h5>
     <%# for <%= @station.name %>
    <a href="/stations"><button type="button" class="btn-close text-reset" aria-label="Close"></button></a>

  </div>
  <img src="https://media.istockphoto.com/vectors/feedback-concept-vector-id1334110515?b=1&k=20&m=1334110515&s=612x612&w=0&h=csBgwdGmozln9HU5RmL0vAhh00BhoQ0lnuplDY4KClw="  alt="EV-212" width="280px" height="280px"></a>
<br>
<br>

  <%= simple_form_for [@station, @review] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :content,
                    label: false,
                    required: true,
                    input_html: { autocomplete: "Comment", placeholder:"Comment"} %>

        <%= f.input :rating,
                      collection: (1..5).to_a,
                      label: "Rate your experience",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Rating", placeholder:"Rate your experience", data: {controller: "star-rating"}},
                      wrapper_html: {class: "ms-3"}%>

      <%= f.input :photo,
                    as: :file,
                    label: false,
                    required: true,

                    input_html: { placeholder:"Photo"}  %>
    </div>
<br>
    <div class="form-actions text-center">
      <%= f.button :submit, "Submit", class:"btn btn-primary w-50 rounded-pill" %>
    </div>
  <% end %>
  <br>

</div>
