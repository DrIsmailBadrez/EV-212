<div class="container text-center p-4">

  <h1>Sign up</h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: false,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "e-mail", placeholder:"Email", class:"bg-white"}%>
      <div class="mt-3">
        <%= f.input :password, label: false,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder:"Password", class:"bg-white"} %>
      </div>
      <%= f.input :password_confirmation, label: false,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder:"Repeat password", class:"bg-white"} %>
    </div>
    <br>
    <div class="form-actions text-center">
      <%= f.button :submit, "Sign up", class:"btn-primary w-50 rounded-pill" %>
    </div>
  <% end %>
  <div class=" text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
