<div class="container p-4">
<div class="logo-profile text-center">
    <img src="https://i.ibb.co/Chv9jZ7/EV-212-4.gif"  alt="EV-212" width="350px" height="350px">
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs mt-5 mb-5">
      <%= f.input :email,
                  label: false,
                  required: false,
                  # autofocus: true,
                  input_html: { autocomplete: "email", placeholder:"Email" } %>
      <%= f.input :password,
                  label: false,
                  required: false,
                  input_html: { autocomplete: "current-password", placeholder:"Password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Log in", class:"btn-primary w-50 rounded-pill" %>
    </div>
  <% end %>
  <div class=" text-center">
  <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
