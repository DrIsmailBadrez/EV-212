
  <%= simple_form_for(@station) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name, label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Name", placeholder:"Name"} %>
      <%= f.input :address, label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Address", placeholder:"Address"}  %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Submit", class:"btn-primary w-50 rounded-pill" %>
    </div>
  <% end %>
