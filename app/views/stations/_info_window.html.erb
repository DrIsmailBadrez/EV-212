<% if !station.reviews.empty? %>
  <% note = 0 %>
  <% station.reviews.each do |review| %>
    <% note += review.rating  %>
  <% end %>
  <% average = note.fdiv((station.reviews).size) %>
<% end %>
<h2><a href="http://maps.apple.com/maps?q=18.551464,73.951399"></a></h2>
<span>
  <h2><%= station.name %></h2>
  <% if !average.nil? %>
    <% if average.integer? %>
      <h6><% average.times do  %>
            <i class='fa-sharp fa-solid fa-star' style="color: #ffcd3c;"></i>
          <% end %>
          <% (5 - average).times do %>
            <i class='fa-regular fa-star' style="color: #ffcd3c;"></i>
          <% end %>
          (<%= (station.reviews).size %>)
      </h6>
    <% else %>
      <h6><% average.to_i.times do  %>
            <i class='fa-sharp fa-solid fa-star' style="color: #ffcd3c;"></i>
          <% end %>
            <i class="fa-solid fa-star-sharp-half-stroke" style="color: #ffcd3c;"></i>
          <% (4 - average.to_i).times do %>
            <i class='fa-regular fa-star' style="color: #ffcd3c;"></i>
          <% end %>
          (<%= (station.reviews).size %>)
      </h6>
    <% end %>
  <% end %>
</span>
<p><%= station.address %></p>
<%= cl_image_tag station.photo.key, height: 100, width: 100, crop: :fill %>
<br>
<a href="http://maps.apple.com/maps?q=<%=station.latitude%>,<%=station.longitude%>" target="_blank">Click here for map</a>
<%= link_to "Leave a review", new_station_review_path(station)%>
<%= link_to "See all reviews", station_reviews_path(station)%>
    <hr>
    <h5>Chargers available:</h5>
    <% station.station_chargers.each do |station_charger| %>
      <li style="list-style: none"><%= image_tag(station_charger.charger.ctype+".png", style:"width:50px; height:50px")%>
      <span style="display: inline-block; min-width: 66px;"><%= station_charger.charger.capacity %>kW<b> x <%= station_charger.charger_count %></b></span></li>
    <% end %>

<% if !station.reviews.empty? %>
  <% station.reviews.each do |review| %>
    <p class="mb-0"><b>Review NÂ°</b><%= review.id %></p>
    <p class="mb-0"><b>Comment:</b><%= review.content %></p>
    <p class="mb-0"><b>Rating:</b><%= review.rating %></p>
    <% if review.photo.key? %>
      <%= cl_image_tag review.photo.key, height: 50, width: 50, crop: :fill %>
    <% end %>
    <hr>
  <% end %>
<% end %>
